<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>My blogs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
      body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
      }

      .blog-grid {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px 20px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
      }

      .blog-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
      }

      .blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
      }

      .blog-cover {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .gradient-bg {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 30px 25px;
        min-height: 120px;
        display: flex;
        align-items: center;
      }

      .blog-content {
        padding: 25px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
      }

      .blog-title {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 12px;
        color: #2d3748;
        line-height: 1.3;
      }

      .blog-excerpt {
        color: #718096;
        line-height: 1.6;
        margin-bottom: 20px;
        flex-grow: 1;
      }

      .blog-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 14px;
        color: #a0aec0;
      }

      .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .author-info {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .author-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
      }

      .edit-btn {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
        display: inline-block;
      }

      .edit-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
      }

      .no-blogs {
        text-align: center;
        padding: 60px 20px;
        color: #718096;
      }

      .no-blogs h2 {
        font-size: 28px;
        margin-bottom: 15px;
        color: #4a5568;
      }

      .create-btn {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        margin-top: 20px;
        display: inline-block;
        transition: all 0.3s ease;
      }

      .create-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
      }

      .icon {
        width: 16px;
        height: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }

      @media (max-width: 768px) {
        .blog-grid {
          grid-template-columns: 1fr;
          padding: 20px 15px;
        }
        
        .blog-card {
          margin-bottom: 20px;
        }
        
        .blog-meta {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <main>
      <% if (blogs && blogs.length > 0) { %>
        <div class="blog-grid">
          <% blogs.forEach(blog => { %>
            <div class="blog-card">
              <% if (blog.coverImage && blog.coverImage.length > 0) { %>
                <img src="<%= blog.coverImage %>" 
                     alt="Cover for <%= blog.title %>" 
                     class="blog-cover">
              <% } else { %>
                <div class="gradient-bg">
                  <h3 class="blog-title" style="color: white; margin: 0;"><%= blog.title %></h3>
                </div>
              <% } %>

              <div class="blog-content">
                <% if (blog.coverImage && blog.coverImage.length > 0) { %>
                  <h3 class="blog-title"><%= blog.title %></h3>
                <% } %>
                
                <p class="blog-excerpt">
                  <%- blog.content.replace(/<[^>]+>/g, "").substring(0, 120) %>...
                </p>

                <div class="blog-meta">
                  <div class="author-info">
                    <% if (blog.authorProfileImage) { %>
                      <img src="<%= blog.authorProfileImage %>" 
                           alt="<%= blog.authorName %>" 
                           class="author-avatar">
                    <% } %>
                    <span class="meta-item">
                      <i class="fas fa-feather-alt icon"></i>
                      <%= blog.authorName %>
                    </span>
                  </div>
                  
                  <span class="meta-item">
                    <i class="fas fa-eye icon"></i>
                    <%= blog.views || 0 %> views
                  </span>
                  
                  <% if (blog.createdAt) { %>
                    <span class="meta-item">
                      <i class="far fa-calendar-alt icon"></i>
                      <%= new Date(blog.createdAt).toLocaleDateString() %>
                    </span>
                  <% } %>
                </div>

                <a href="/blog/edit/<%= blog._id %>" class="edit-btn">
                  <i class="fas fa-arrow-right"></i> Edit
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="no-blogs">
          <i class="fas fa-feather" style="font-size: 48px; margin-bottom: 20px; color: #6a11cb;"></i>
          <h2>No Blogs Yet</h2>
          <p>Share your first story with the community!</p>
          <a href="/blog/create" class="create-btn">
            <i class="fas fa-plus"></i> Create Your First Blog
          </a>
        </div>
      <% } %>
    </main>

    <%- include('./partials/scripts') %>
  </body>
</html>